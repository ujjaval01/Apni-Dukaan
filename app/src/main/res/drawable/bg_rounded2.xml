<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF"/> <!-- apna color choose kar lo -->

    <!-- Rounded corners -->
    <corners android:radius="16dp"/>  <!-- sab corners same -->

    <!-- Border (optional) -->
    <stroke
        android:width="2dp"
        android:color="#2196F3"/> <!-- optional outline -->

    <!-- Inner padding (optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
