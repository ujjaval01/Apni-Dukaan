<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Theme -->
    <style name="Theme.ApniDukaan.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.ApniDukaan.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Bottom Navigation Custom Indicator -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/red</item>
    </style>

</resources>
